---
import { Badge } from "./ui/badge";
const { tags } = Astro.props;
---

<div class="flex flex-wrap gap-1">
  {tags.map((i) => (
    <span aria-hidden="true">
      <Badge
        className="truncate cursor-default select-none bg-primary text-primary-foreground !hover:bg-primary hover:ring-1 hover:ring-foreground/20"
      >
        {i}
      </Badge>
    </span>
  ))}
</div>

