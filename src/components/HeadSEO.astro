---
import "@/styles/globals.css";

interface Props {
  title?: string;
  description?: string;
  ogImage?: URL;
  canonicalURL?: URL;
}

const { title, description, ogImage, canonicalURL } = Astro.props;
const canonical = canonicalURL ? canonicalURL : new URL(Astro.url.pathname, Astro.site);

// Ajusta aquí tu nombre base si quieres
const SITE_NAME = "IPSerra";

// Title seguro
const pageTitle = title ?? SITE_NAME;


// Cache-buster del favicon (cambia a v=3, v=4 cuando lo actualices)
const FAVICON_VER = "2";
---

<meta charset="utf-8" />
<meta name="robots" content="index, follow" />
<meta name="googlebot" content="index, follow" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<meta name="generator" content={Astro.generator} />
<link rel="canonical" href={canonical} />

<!-- ✅ Favicons -->
<link rel="icon" href={`/favicon.ico?v=${FAVICON_VER}`} sizes="any" />
<link rel="shortcut icon" href={`/favicon.ico?v=${FAVICON_VER}`} />

<title>{pageTitle}</title>
<meta name="title" content={pageTitle} />
{description && <meta name="description" content={description} />}

<meta property="og:type" content="website" />
<meta property="og:url" content={canonical} />
<meta property="og:title" content={pageTitle} />
{description && <meta property="og:description" content={description} />}
{ogImage && <meta property="og:image" content={ogImage} />}

<!-- ✅ Fonts (typo fix: https) -->
<link
  rel="preload"
  href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&display=swap"
  as="style"
  onload="this.onload=null;this.rel='stylesheet'"
/>
<noscript>
  <link
    rel="stylesheet"
    href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&display=swap"
  />
</noscript>
