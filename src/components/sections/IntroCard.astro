---
import {Button} from '../ui/button'
import {PROFILE} from "../../content/profileData";
import {Linkedin, Github, Mail, Youtube, Twitter, Rss, Book, PanelsTopLeft} from 'lucide-react'
---

<div class="flex h-full w-full flex-col md:flex-row items-start gap-6 md:gap-8 animate-appear">
  <!-- IMAGEN -->
  <div class="order-1 md:order-2 w-full md:w-auto shrink-0 flex justify-center md:justify-end">
    <img
      src={PROFILE.avatarUrl}
      alt={`Foto de ${PROFILE.name}`}
      loading="lazy"
      decoding="async"
      class="w-full max-w-[14rem] sm:max-w-[16rem] md:w-56 md:h-72 h-auto aspect-[4/5]
             rounded-3xl object-cover object-[50%_15%]"
    />
  </div>

  <!-- TEXTO -->
  <div class="order-2 md:order-1 min-w-0 flex-1 flex flex-col gap-4 md:max-h-[300px]">
    <div class="flex flex-col">
      <p class="m-0 text-xl font-light">
        Soy <b class="font-bold">{PROFILE.firstName}</b>.
      </p>

      <ul class="pt-4 space-y-2 text-sm sm:text-base">
        {PROFILE.shortIntros.map((intro, index) => (
          <>
            {index === Math.floor(PROFILE.shortIntros.length / 2)
              ? <li aria-hidden="true" class="h-2"></li>
              : null}
            <li class="break-words">{intro}</li>
          </>
        ))}
      </ul>
    </div>
  </div>
</div>




